<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/headAdmin") %>
<body>
    <%- include("../partials/headerAdmin") %>
    <main class="main-admin-create">
        <h1>AGREGAR PRODUCTO</h1>
     <div class="create-forms">
         <form class="create" action="/admin/cargaDeProducto" method="POST" enctype="multipart/form-data">
             <div class="inputs-create">
          <label for="name">Nombre:</label>
          <input type="text" name="name" id="name">
             </div>
             <div class="large">
                <label for="description">Descripci√≥n:</label>
                <textarea name="description" id="description" cols="30" rows="5"></textarea>
                   </div>
                   <div class="inputs-create">
                     <label for="variety">Variedades:</label>
                     <% variety.forEach(variety => { %>
                        <label for="<%= variety.name %>">
                           <input type="checkbox" name="variety" id="variety" value="<%= variety.id %>"><%= variety.name %>
                        </label>
                        
                     <% }) %>
                        </div>
                       <div class="inputs-create"> 
                              <label for="category"> Categorias: </label>
                                 <select name="category" id="">
                                    <% category.forEach(category => { %>
                                    <option value="<%= category.id %>"><%= category.name %> </option>
                                    <% }) %>

                                 </select>
                           
                        </select>
                           </div>
                       <div class="inputs-create">
                        <label for="collection">Collection:</label>
                        <select name="collection" id="">
                           <% collection.forEach(collection => { %>
                              <option value="<%= collection.id %>"><%= collection.name %></option>
                              <% }) %>
                        </select>
                           </div>
                           <div class="inputs-create">
                              <label for="stock">Stock:</label>
                              <input type="number" name="stock" id="stock">
                           </div>
                           <div class="large">
                            <label for="pairing">Pairing:</label>
                            <textarea name="pairing" id="pairing" cols="30" rows="5"></textarea>
                               </div>
                               <div class="inputs-create">
                                <label for="alcoholContent">Graduacion Alcoholica:</label>
                                <input type="text" name="alcoholContent" id="alcoholContent">
                                <p>%</p>
                                   </div>
                                   <div class="inputs-create">
                                    <label for="totalAcidity">Acidez:</label>
                                    <input type="text" name="totalAcidity" id="acidez">
                                    <p>g/l</p>
                                       </div>
                                       <div class="inputs-create">
                                        <label for="residualSugar">Azucar Residual:</label>
                                        <input type="text" name="residualSugar" id="residualSugar">
                                        <p>g/l</p>
                                           </div>
                                           <div class="inputs-create">
                                            <label for="service_temperature">Temperatura recomendada:</label>
                                            <input type="text" name="service_temperature" id="service_temperature">
                                               </div>
                                               <div class="inputs-create">
                                                <label for="price">price:</label>
                                                <input type="number" name="price" id="price">
                                                   </div>
                                                   <div class="inputs-create">
                                                    <label for="discount">Descuento:</label>
                                                    <input type="number" name="discount" id="discount"><p>%</p>
                                                       </div> 
                                                       <div class="inputs-create">
                                                          <label for="image">Cargar Imagen:</label>
                                                          <input type="file" name="image" id="inputFile">
                                                       </div>
                                                       <button type="submit">CREAR</button>                             
     </div>
    </main>
</body>
</html>