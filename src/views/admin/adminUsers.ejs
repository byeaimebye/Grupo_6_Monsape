<!DOCTYPE html>
<html lang="es">    
<%- include("../partials/headAdmin") %>    
<%- include("../partials/head") %>    
<body>
    <!--headerAdmin-->
    <%- include("../partials/header") %> 
    <div class="search-admin2">
      <input class="input-search-admin2" type="text" placeholder="Buscar Usuario...">
    </div>              
    <main class="main-admin-users">
      <div class="title">
        <h1>Listado de Usuarios Registrados</h1>              
      </div>
      <table class="table-users">
        <thead>
          <tr class="category">
            <th class="id" scope="col">id</th>            
            <th class="nombre" scope="col">Nombre</th>
            <th class="email" scope="col">Email</th>
            <th class="date" scope="col">Fecha de nacimiento</th>
            <th class="rol" scope="col">Rol</th>
            <th class="editar" scope="col">Editar</th>
          </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
              <tr class="users">
                  <td class="id"><%- user.id%></td>
                  <td class="nombre"><%- user.fullname%></td>
                  <td class="email"><%- user.email%></td>                  
                  <td class="date"><%- user.date%></td>
                  <td class="rol"><%- user.rol %></td>
                  <td class="btn-options">
                      <a class="btn-edit" href="/admin/userProfileAdmin/<%- user.id %>"><img src="/img/editar.svg" alt="editar informaciÃ³n de usuario"></a>                      
                  </td>
                </tr>
            <% }) %>
        </tbody>
      </table>
    </main>     
    <script src="/javascripts/adminTableUsers.js" defer></script>  
  
</body>
</html>