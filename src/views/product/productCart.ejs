<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head.ejs")%>

    <body class="body-productCart">
        <!-- Header start here -->
        <%- include("../partials/header.ejs")%>

            <!-- MAIN -->
            <label for="">
                <div class="cart-data-view">
                    <main class="main-productCart">
                        <section class="section-productCart">
                            <h2 class="h2-product-cart" display="none">MI CARRITO</h2>
                            <!-- Columnas -->
                            <div class="column">
                                <p>PRODUCTO</p>
                                <p>SUBTOTAL</p>
                            </div>
